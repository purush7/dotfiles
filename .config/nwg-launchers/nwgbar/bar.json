[{
        "name": "Lock screen",
        "exec": "~/.config/sway/scripts/create_dynamic_lock_image && swaylock -f -i /tmp/sway_lock_image.png",
        "icon": "system-lock-screen"
    },
    {
        "name": "Logout",
        "exec": "swaymsg exit",
        "icon": "system-log-out"
    },
    {
        "name": "Reboot",
        "exec": "systemctl reboot",
        "icon": "system-reboot"
    },
    {
        "name": "Shutdown",
        "exec": "systemctl -i poweroff",
        "icon": "system-shutdown"
    }
]